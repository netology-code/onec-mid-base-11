#Область netology

&НаСервере
Процедура ДобавитьПоляДляРасчетаСкидки()
	
	Группа = Элементы.Добавить("ГруппаОбычная", Тип("ГруппаФормы"),Элементы.ГруппаШапкаЛево);
	Группа.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	Группа.Отображение = ОтображениеОбычнойГруппы.Нет;
	Группа.ОтображатьЗаголовок = ЛОЖЬ; 
	Группа.Группировка = ГруппировкаПодчиненныхЭлементовФормы.ГоризонтальнаяВсегда;     
	
	ПолеВвода = Элементы.Добавить(
		"netology_ПроцентСкидки",    
		Тип("ПолеФормы"), 
		Группа);	      
	ПолеВвода.Заголовок = "Процент скидки";
	ПолеВвода.Вид = ВидПоляФормы.ПолеВвода;
	ПолеВвода.ПутьКДанным = "Объект.netology_ПроцентСкидки"; 
	ПолеВвода.УстановитьДействие("ПриИзменении","ПриИзмененииПроцентСкидки"); 
	
	//Добавление команды формы
	Команда = Команды.Добавить(
		"КомандаПересчитатьТаблицу"); 
	Команда.Заголовок = "Пересчитать таблицу";
	Команда.Действие  = "НажатиеКнопкиПересчитатьТаблицу"; 
	Команда.Картинка = БиблиотекаКартинок.Обновить;
	Команда.Отображение = ОтображениеКнопки.КартинкаИТекст;
	
	//Добавление кнопки формы
	КнопкаФормы = Элементы.Добавить(
		"КнопкаПересчитатьТаблицу", 
		Тип("КнопкаФормы"), 
		Группа); 
	КнопкаФормы.ИмяКоманды = "КомандаПересчитатьТаблицу"; 
	КнопкаФормы.Вид = ВидКнопкиФормы.ОбычнаяКнопка;   
	
	
КонецПроцедуры	

&НаКлиенте
Процедура НажатиеКнопкиПересчитатьТаблицу()

	ПересчитатьСуммыСтрок();
	
КонецПроцедуры  

&НаКлиенте
Асинх Процедура ПриИзмененииПроцентСкидки()
	
	Если Объект.Товары.Количество() = 0 и Объект.Услуги.Количество() = 0 тогда
		возврат;
	КонецЕсли;
	
	Ответ = Ждать ВопросАсинх(НСтр("ru = 'Изменен процент скидки. 
	|Пересчитать таблицы товаров и услуг?'"), РежимДиалогаВопрос.ДаНет);
	
	Если Ответ <> КодВозвратаДиалога.Да Тогда 
		Возврат;
    КонецЕсли;
	
    ПересчитатьСуммыСтрок();
	
КонецПроцедуры   

&НаКлиенте
Процедура ПересчитатьСуммыСтрок()
	
	Для Каждого стр из Объект.Товары цикл
		РассчитатьСуммуСтроки(стр);			
	КонецЦикла;    
	
	Для Каждого стр из Объект.Услуги цикл
		РассчитатьСуммуСтроки(стр);			
	КонецЦикла; 
		
КонецПроцедуры

