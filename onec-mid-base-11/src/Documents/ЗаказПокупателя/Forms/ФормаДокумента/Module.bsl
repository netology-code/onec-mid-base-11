&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	// СтандартныеПодсистемы.ПодключаемыеКоманды
	ПодключаемыеКоманды.ПриСозданииНаСервере(ЭтотОбъект);
	// Конец СтандартныеПодсистемы.ПодключаемыеКоманды
	
	//{+ ОбвинцевДС 25.12.2024
	//Добавление поля "Контактое лицо"
    ГруппаШапкаПраво = Элементы.ГруппаШапкаПраво;
	ПолеВвода = Элементы.Добавить("ЭлементКонтактноеЛицо",Тип("ПолеФормы"), ГруппаШапкаПраво); 
	ПолеВвода.Вид = ВидПоляФормы.ПолеВвода;
	ПолеВвода.ПутьКДанным = "Объект.ОД_КонтактноеЛицо";	
	
	// Добавление поля "Согласованная скидка" 
	ГруппаШапкаЛево = Элементы.Добавить("ОД_ПрименениеСкидки",Тип("ГруппаФормы"),Элементы.ГруппаШапкаЛево);
	ГруппаШапкаЛево.Вид = ВидГруппыФормы.ОбычнаяГруппа;
	ГруппаШапкаЛево.Заголовок = "Группа полей для ведения скидки";
    ПолеВвода = Элементы.Добавить("ЭлементСогласованнаяСкидка",Тип("ПолеФормы"), ГруппаШапкаЛево); 
	ПолеВвода.Вид = ВидПоляФормы.ПолеВвода;
	ПолеВвода.ПутьКДанным = "Объект.ОД_СогласованнаяСкидка"; 
	ПолеВвода.УстановитьДействие("ПриИзменении","ОД_ПриИзмененииСкидки");
	
	// Добавление новой команды "Применить скидку" по пересчету суммы позиций в таблицах с учетом скидки
    КомандаПрименитьСкидку = Команды.Добавить("ОД_ПрименитьСкидку");
	КомандаПрименитьСкидку.Заголовок = "ЗаполнитьСкидку";
	КомандаПрименитьСкидку.Действие = "ОД_КомандаПрименитьСкидку"; 
	КнопкаФормыПрименитьСкидку = Элементы.Добавить("ОД_КнопкаПрименитьСкидку",Тип("КнопкаФормы"),ГруппаШапкаЛево);
	КнопкаФормыПрименитьСкидку.ИмяКоманды = "ОД_ПрименитьСкидку";
	КнопкаФормыПрименитьСкидку.Вид = ВидКнопкиФормы.ОбычнаяКнопка;	
	//+} ОбвинцевДС 25.12.2024
	
	
КонецПроцедуры

