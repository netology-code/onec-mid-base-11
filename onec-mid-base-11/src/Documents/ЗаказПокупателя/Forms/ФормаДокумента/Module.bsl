&НаСервере
Процедура м62_ДобавитьЭлементСогласованнаяСкидка()
    ГруппаКолонкиШапкиЕлемент = Элементы.ГруппаКолонкиШапки;
	ГруппаСкидкаЭлемент = Элементы.Вставить("м62_ГруппаСкидка", Тип("ГруппаФормы"),ГруппаКолонкиШапкиЕлемент.Родитель, ГруппаКолонкиШапкиЕлемент);
	Элементы.Переместить(ГруппаКолонкиШапкиЕлемент,ГруппаКолонкиШапкиЕлемент.Родитель, ГруппаСкидкаЭлемент); 
	ГруппаСкидкаЭлемент.Вид = ВидГруппыФормы.ОбычнаяГруппа;

	СкидкаЭлемент = Элементы.Добавить("м62_СогласованнаяСкидка", Тип("ПолеФормы"),ГруппаСкидкаЭлемент);
	СкидкаЭлемент.Вид = ВидПоляФормы.ПолеВвода;
	СкидкаЭлемент.ПутьКДанным = "Объект.м62_СогласованнаяСкидка";
	СкидкаЭлемент.УстановитьДействие("ПриИзменении", "м62_СогласованнаяСкидкаПриИзменении"); 

	Команда = Команды.Добавить("м62_Пересчитать");
	Команда.Заголовок = "Пересчитать";
	Команда.Действие = "м62_КомандаПересчитать";

	КнопкаЭлемент = Элементы.Добавить("м62_Пересчитать", Тип("КнопкаФормы"),ГруппаСкидкаЭлемент);
	КнопкаЭлемент.ИмяКоманды = "м62_Пересчитать";  
	КнопкаЭлемент.Вид = ВидКнопкиФормы.ОбычнаяКнопка;	
КонецПроцедуры                                        

