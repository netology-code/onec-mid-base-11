&НаКлиенте
Асинх Процедура юб_ПрименитьСкидку() 
	// +++++ 
	// Белов Ю.В.
	Если Объект.Товары.Количество() > 0 Или Объект.Услуги.Количество() > 0 Тогда
		Ответ = Ждать ВопросАсинх(
		"Изменен процент скидки. Пересчитать таблицы товаров и услуг?", 
		РежимДиалогаВопрос.ДаНет);
		
		Если Ответ = КодВозвратаДиалога.Да Тогда
			юб_ПересчитатьСоСкидкой();
		КонецЕсли; 
		
	КонецЕсли;
	
КонецПроцедуры 

&НаКлиенте
Процедура юб_ПересчитатьСоСкидкой()
	// +++++ 
	// Белов Ю.В.
	Для Каждого Строка Из Объект.Товары Цикл 
		РассчитатьСуммуСтроки(Строка);
	КонецЦикла;
	Для Каждого Строка Из Объект.Услуги Цикл
		РассчитатьСуммуСтроки(Строка);
	КонецЦикла;
	
КонецПроцедуры

